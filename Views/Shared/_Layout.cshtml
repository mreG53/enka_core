@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Options
@using stokEnka.Services

@inject LocalizationService Localizer


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - stokEnka</title>
    <link rel="icon" href="~/favicon.ico" type="image/x-icon" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <!-- NAV -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
            <div class="container">
                <a class="navbar-brand" href="index.html"><img src="~/images/enkalogo.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-flag"></i>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li>@await Html.PartialAsync("_SetLanguagePartial")</li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link roboto-regular" asp-controller="Home" asp-action="Index">@Localizer.GetLocalizedHtmlString("Menu_AnaSayfa").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)">@Localizer.GetLocalizedHtmlString("Menu_AcikArtirmalar").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)">@Localizer.GetLocalizedHtmlString("Menu_Hakkimizda").Value</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="javascript:void(0)">@Localizer.GetLocalizedHtmlString("Menu_İletisim").Value</a>
                        </li>
                    </ul>
                    <div class="d-flex">
                        <a class="btn btn-outline-primary me-2" type="button" asp-controller="Home" asp-action="Login">@Localizer.GetLocalizedHtmlString("Menu_GirisYap").Value</a>
                        <a class="btn btn-primary" type="button" asp-controller="Register" asp-action="RegisterUser">@Localizer.GetLocalizedHtmlString("Menu_KayitOl").Value</a>
                    </div>
                </div>
                
            </div>
        </nav>
        <!-- NAV -->
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-top">
            <div class="container">
                <div class="footer-day-time">
                    <div class="row">
                        <div class="col-md-8">
                            <ul>
                                <li>@Localizer.GetLocalizedHtmlString("Footer_AS_Metin").Value</li>
                                <li>@Localizer.GetLocalizedHtmlString("Footer_AS_Metin2").Value</li>
                            </ul>
                        </div>
                        <div class="col-lg-4">
                            <div class="phone-no">
                                <a href="javascript:void(0)"><i class="fa fa-mobile" aria-hidden="true"></i>+90 262 677 0 660</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-4">
                        <h4>@Localizer.GetLocalizedHtmlString("Footer_Bilgi").Value</h4>
                        <ul class="address1">
                            <li><i class="fa fa-map-marker"></i><a style="color:blue; text-decoration:underline;" href="https://maps.app.goo.gl/vEPc3QGG3FhujzJMA" target="_blank">Gebze OSB, İhsan Dede Cd. No:129 D:127, 41400 Çayırova/Kocaeli</a></li>
                            <li><i class="fa fa-envelope"></i><a href="mailto:#">enkasatis@enkacivata.com</a></li>
                            <li><i class="fa fa-mobile" aria-hidden="true"></i> <a href="javascript:void(0)">+90 262 677 0 660</a></li>
                        </ul>
                    </div>

                    <div class="col-md-4">
                        <h4>@Localizer.GetLocalizedHtmlString("Footer_Social")</h4>
                        <ul class="social-icon">
                            <li><a href="https://www.facebook.com/enkacivataa/?locale=tr_TR"><i class="fa-brands fa-facebook" aria-hidden="true"></i></a></li>
                            <li><a href="https://www.instagram.com/civataenka/"><i class="fa-brands fa-instagram" aria-hidden="true"></i></a></li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-sm-5">
                        <p class="copyright text-uppercase">CopyrIght © 2024</p>
                    </div>
                    <div class="col-sm-7">
                        <ul>
                            <li><a href="#">@Localizer.GetLocalizedHtmlString("Footer_AnaSayfa")</a></li>
                            <li><a href="#">@Localizer.GetLocalizedHtmlString("Footer_Hakkimizda")</a></li>
                            <li><a href="#">@Localizer.GetLocalizedHtmlString("Footer_Market")</a></li>
                            <li><a href="#">@Localizer.GetLocalizedHtmlString("Footer_Iletisim")</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/style.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
