

@{
    Layout = "_Layout";
}


<main class="container mt-4">
    <button class="btn btn-primary sidebar-toggle" type="button" onclick="toggleSidebar()">Filtrelemeler</button>
    <div class="row">
        <aside class="col-md-3 sidebar border">
            <h4>Filtrelemeler</h4>
            <form>
                <div class="form-group">
                    <label for="category">Kategori</label>
                    <select class="form-control" id="category">
                        <option>Elektronik</option>
                        <option>Mobilya</option>
                        <option>Giyim</option>
                        <option>Kitap</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="priceRange">Fiyat Aralığı</label>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="text" class="form-control price-input" id="priceRangeMin" placeholder="Min">
                        </div>
                        <div class="col-md-6">
                            <input type="text" class="form-control price-input" id="priceRangeMax" placeholder="Max">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="condition">Durum</label>
                    <select class="form-control" id="condition">
                        <option>Yeni</option>
                        <option>İkinci El</option>
                        <option>Yenilenmiş</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Filtrele</button>
            </form>
        </aside>

        <section class="col-md-9">
            <div class="container mt-4">
                <div class="row justify-content-center">
                    <div class="col-md-8 search-container">
                        <input id="input_search" type="search" class="form-control" value="" placeholder="Ara">
                        <button id="btn_search" type="submit" class="btn btn-success"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
            </div>
